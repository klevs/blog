<% if @product.errors.any? %>
	<ul>
	  <% @product.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
<% end %>

<%= form_for @product do |f| %>
  Name: <%= f.text_field :name %><br />
  Price : <%= f.number_field :price %><br />
  <%= f.submit %>
<% end %>

<%= link_to "< Back", products_path %>