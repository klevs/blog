<h1>Product's list</h1>

<%= link_to "Add Product", new_product_path %>

<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Price</th>
	</tr>
	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= product.name %></td>
			<td><%= product.price %></td>
		</tr>
	<% end %>
</table>
